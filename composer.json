{
    "name": "olcs/olcs-common",
    "description": "Common library for the OLCS Project",
    "type": "library",
    "require": {
        "php": "^7.4",
        "ezyang/htmlpurifier": "^4.17",
        "laminas/laminas-authentication": "^2.6",
        "laminas/laminas-cache": "^3.0",
        "laminas/laminas-code": "^4.7",
        "laminas/laminas-eventmanager": "^3",
        "laminas/laminas-filter": "^2.9",
        "laminas/laminas-form": "^3.0",
        "laminas/laminas-http": "^2.8",
        "laminas/laminas-i18n": "^2.14",
        "laminas/laminas-inputfilter": "^2.10",
        "laminas/laminas-modulemanager": "^2.9",
        "laminas/laminas-mvc": "^3.0",
        "laminas/laminas-navigation": "^2.15",
        "laminas/laminas-servicemanager": "^3.3",
        "laminas/laminas-stdlib": "^3.0",
        "laminas/laminas-validator": "^2.11",
        "laminas/laminas-view": "^2.11",
        "olcs/olcs-logging": "^5.0.0",
        "olcs/olcs-transfer": "^5.0.0",
        "olcs/olcs-utils": "^5.0",
        "psr/container": "^1.1|^2"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8",
        "dms/phpunit-arraysubset-asserts": "^0.5.0",
        "doctrine/annotations": "^1.14.2",
        "johnkary/phpunit-speedtrap": "^4.0",
        "lm-commons/lmc-rbac-mvc": "^3.3",
        "mikey179/vfsstream": "~v1.6.11",
        "mockery/mockery": "^1.6.7",
        "phpunit/phpunit": "^9.6",
        "symfony/filesystem": "^5.4",
        "symfony/lock": "^5.4",
        "laminas/laminas-serializer": "^2.10"
    },
    "autoload": {
        "psr-4": {
            "Common\\": "Common/src/Common"
        },
        "classmap": [
            "./Common/src/Module.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "CommonTest\\": "test/Common/src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "laminas/laminas-dependency-plugin": true,
            "elendev/composer-push": true,
            "phpstan/extension-installer": true
        },
        "platform": {
            "ext-redis": "4.3"
        }
    },
    "scripts": {
        "bin": "echo 'bin not installed'",
        "post-install-cmd": [
            "@composer bin all install"
        ],
        "test": "phpunit",
        "phpcs": "phpcs",
        "psalm": "psalm",
        "phpstan": "phpstan",
        "all": [
            "@test",
            "@phpcs",
            "@psalm",
            "@phpstan"
        ]
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": true,
            "forward-command": true
        }
    }
}
