{
    "name": "olcs/OlcsCommon",
    "description": "Common library for the OLCS Project",
    "type": "library",
    "repositories": [
        {
            "packagist": false
        },
        {
            "url": "http://devrepo.shd.ci.nonprod.dvsa.aws",
            "type": "composer"
        },
        {
            "type": "vcs",
            "url": "git@repo.shd.ci.nonprod.dvsa.aws:olcs/olcs-testhelpers.git"
        },
        {
            "url": "git@repo.shd.ci.nonprod.dvsa.aws:olcs/olcs-transfer.git",
            "type": "vcs"
        },
        {
            "url": "git@repo.shd.ci.nonprod.dvsa.aws:olcs/olcs-utils.git",
            "type": "vcs"
        }
    ],
    "require": {
        "php": ">=5.4",
        "zendframework/zendframework": "~2.4.0",
        "doctrine/doctrine-orm-module": "~0.9.0",
        "doctrine/annotations": "^1.2.3",
        "symfony/Filesystem": "~2.6.0",
        "zf-commons/zfc-rbac": "~2.4.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "~1.5.3",
        "phpunit/phpunit": "^4.8",
        "mockery/mockery": "~0.9.3",
        "major-caiger/munit": "~0.1.0",
        "mikey179/vfsStream": "~1.4.0",
        "olcs/olcs-testhelpers": "dev-develop",
        "olcs/olcs-transfer": "dev-release/4.20",
        "olcs/olcs-utils": "dev-release/4.20",
        "soflomo/purifier": "~0.1.0"
    },
    "autoload": {
        "psr-0": {
            "Common\\": "Common/src/"
        },
        "classmap": ["./Common/Module.php"]
    },
    "config": {
        "preferred-install": "dist",
        "secure-http": false
    },
    "scripts": {
        "ut": "vendor/bin/phpunit -c test/phpunit.xml --stop-on-failure",
        "review": "${dev_workspace}/olcs-devtools/Review.sh",
        "cs": "${dev_workspace}/olcs-devtools/vendor/bin/phpcs --severity=1 --standard=${dev_workspace}/sonar-configuration/Profiles/DVSA/CS/ruleset.xml",
        "cov": "vendor/bin/phpunit -c test/phpunit-coverage.xml",
        "update-syms": "${dev_workspace}/olcs-devtools/composer-update-syms.sh"
    }
}
